{
  "variables": {
    "source_ami": "ami-95d7b4af"
  },
  "provisioners": [{
      "type":        "file",
      "source":      "./puppet",
      "destination": "/tmp/puppet"
    },{
      "type":            "shell",
      "execute_command": "echo 'ubuntu' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "packer/master/scripts/base.sh",
        "packer/master/scripts/puppet.sh"
      ]
    }
  ],
  "builders": [
    {
      "type":          "amazon-ebs",
      "region":        "us-west-2",
      "source_ami":    "{{user `source_ami`}}",
      "instance_type": "m3.medium",
      "ssh_username":  "ubuntu",
      "ami_name":      "DrupalCI master {{timestamp}}"
    }
  ]
}
