{
  "variables": {
    "jenkins_user": "{{env `JENKINS_USER`}}"
  },
  "provisioners": [{
      "type": "file",
      "source": "./packer/ubuntu/files",
      "destination": "/tmp/jenkins"
    },{
      "type": "shell",
      "execute_command": "echo 'ubuntu' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "packer/ubuntu/scripts/base.sh",
        "packer/ubuntu/scripts/ami-spot.sh",
        "packer/ubuntu/scripts/command.sh",
        "packer/ubuntu/scripts/docker.sh",
        "packer/ubuntu/scripts/containers.sh"
      ]
    },{
      "type": "shell",
      "execute_command": "echo 'ubuntu' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "inline": [
        "sed -i 's/JENKINS_USER/{{user `jenkins_user`}}/g' /usr/bin/userdata"
      ]
    }
  ],
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "ap-southeast-2",
      "source_ami": "ami-95d7b4af",
      "instance_type": "m3.medium",
      "ssh_username": "ubuntu",
      "ami_name": "DrupalCI slave {{timestamp}}"
    }
  ]
}
